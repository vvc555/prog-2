<% include head.ejs %>
<% include header.ejs %>

<body>
    <a class="btn btn-add btn-lg px-3 btn-block" role="button" href="add">+ Lisa projekt / sündmus</a>

    <div class="btn-group-vertical btn-block" role="group" aria-label="Projektid / sündmused">
        <% postid.forEach((post, index) => { %>
        <div class="pro-group" data-toggle="modal" href="#<%=post.id%>">
            <h5 class="text-info"><%= post.tahtaeg %> - <%= post.tyyp %></h5>
            <div class="gradient">
                <p class="m-1"><%= post.aine %>,
                    <br/>Õppejõu Nimi</p>
                <p class="m-1 font-weight-bold"><%= post.kirjeldus %></p>
            </div>
        </div>
        <% }) %>
    </div>


    <% include bottom.ejs %>

    <% include menu.ejs %>
    <% include search.ejs %>

    <script>
        var socket = io();
        
        // elemendid muutujatesse
        var aine = document.getElementById("aine");
        var tyyp = document.getElementById("tyyp");
        var pealkiri = document.getElementById("pealkiri");
        var kirjeldus = document.getElementById("kirjeldus");
        var tahtaeg = document.getElementById("tahtaeg");
        var prioriteet = document.getElementById("prioriteet");
        var meeldetuletus = document.getElementById("meeldetuletus");
        var sendBtn = document.getElementById("sendBtn");
    
    
        // selle funktsiooni abil võtma serveri poolt vastu teateid nimega 'post'
        socket.on('post', function(msg) {
            console.log('reloadin');
            // ning lisame saadud teate kõikide teiste teadete hulka
            $('head').append('<META HTTP-EQUIV="REFRESH" CONTENT="2; URL=/">');
            // postid.innerHTML += '<li>' + msg + '</li>';
        });
    </script>

    <div id="postid">
    <% postid.forEach((post, index) => { %>
        <% include post-modal.ejs %>
    <% }) %>
    </div>

</body>

</html>